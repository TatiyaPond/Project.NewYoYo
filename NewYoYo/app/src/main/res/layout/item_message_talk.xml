<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_talk_layout"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_text_message_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_massage"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/colorTextWhite"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_text_seen_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_text_message_talk"
        android:layout_above="@+id/item_text_time_talk"
        android:layout_marginRight="5dp"
        android:text="อ่านแล้ว"
        android:textSize="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_text_time_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_text_message_talk"
        android:layout_toStartOf="@+id/item_text_message_talk"
        android:layout_marginRight="5dp"
        android:text="Time"
        android:textSize="12dp" />

</RelativeLayout>