<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img_show_all"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="7dp"/>

        <TextView
            android:id="@+id/item_text_show_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_show_all"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_title_showall_activity"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="ชื่อสินค้า"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_show_all"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_price_showall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:layout_weight="1"
                android:text="฿"
                android:textSize="@dimen/text_showall_activity" />

            <TextView
                android:id="@+id/item_amount_showall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="จำนวน"
                android:textSize="@dimen/text_showall_activity" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_province_showall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/item_img_show_all"
            android:layout_marginTop="75dp"
            android:textAlignment="center"
            android:text="จังหวัด"
            android:textSize="@dimen/text_showall_activity" />
    </RelativeLayout>
</android.support.v7.widget.CardView>