<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@android:color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img_sale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="7dp" />

        <ImageView
            android:id="@+id/item_dots_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/three_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_text_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_sale"
            android:maxLines="2"
            android:text="ชื่อสินค้า"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:layout_toStartOf="@+id/item_dots_sale"
            android:textSize="@dimen/text_title_showall_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_amount_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_sale"
            android:layout_below="@+id/item_text_sale"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="จำนวน"
            android:textSize="@dimen/text_showall_activity" />

        <TextView
            android:id="@+id/item_status_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/item_img_sale"
            android:text="สถานะ"
            android:textAlignment="center"
            android:textColor="#d9152ff6"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>